@@ -0,0 +1,7 @@
+#!/bin/bash
+
+for a in *.sfd; do
+    fontfile=$(basename $a .sfd)
+    fontforge -lang=ff -c 'Open($1); Generate($2)' ${fontfile}.sfd ${fontfile}.ttf
+    ttfautohint -v -t ${fontfile}.ttf ${fontfile}-autohinted.ttf
+done
